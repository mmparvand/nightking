# Application
APP_NAME=Nightking VPN Panel
ENVIRONMENT=development
LOG_LEVEL=INFO
SECRET_KEY=change-me
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRES_MINUTES=60
ALLOW_ORIGINS=http://localhost:5173

# Database
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=nightking
POSTGRES_HOST=db
POSTGRES_PORT=5432
DATABASE_URL=postgresql+psycopg2://postgres:postgres@db:5432/nightking

# Redis
REDIS_URL=redis://redis:6379/0

# Auth seed users
ADMIN_USERNAME=admin
ADMIN_PASSWORD=changeme
ADMIN_ROLE=ADMIN
RESELLER_USERNAME=reseller
RESELLER_PASSWORD=changeme

# Frontend
VITE_API_BASE_URL=http://localhost:8000
VITE_SUBSCRIPTION_DOMAIN=localhost
VITE_SUBSCRIPTION_PORT=2053
VITE_SUBSCRIPTION_SCHEME=https

# Subscription links
SUBSCRIPTION_DOMAIN=localhost
SUBSCRIPTION_PORT=2053
SUBSCRIPTION_SCHEME=https

# Xray config management
XRAY_CONFIG_PATH=/var/lib/xray/config.json
# Command executed inside backend container to reload xray (optional). Example:
# XRAY_RELOAD_COMMAND=docker compose exec xray kill -HUP 1
XRAY_RELOAD_COMMAND=
XRAY_STATUS_HOST=xray
XRAY_INBOUND_PORT=8443
